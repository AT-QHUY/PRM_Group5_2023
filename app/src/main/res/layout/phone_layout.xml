<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvPhoneName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Full Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageResource"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageResource"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <TextView
        android:text="DOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tvPrice"
        app:layout_constraintStart_toStartOf="@+id/tvPhoneName"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneName" android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imgViewDelete"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/close_ggfont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintTop_toBottomOf="@+id/imgViewEdit" />

    <ImageView
        android:id="@+id/imgViewEdit"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/edit_ggfont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>